<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--问题 标题 css-->
    <style name="question_title_css">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--问题 面板 css-->
    <style name="question_panel">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <!--问题 按钮 css-->
    <style name="question_button_css">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">#6699cc</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--面试 界面 css-->
    <style name="question_css">
        <item name="android:background">#ececec</item>
    </style>

    <!--job 题库展示BTN -->
    <style name="job_tiku_btn_css">
        <item name="android:background">#b0b0b0</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>
</resources>
